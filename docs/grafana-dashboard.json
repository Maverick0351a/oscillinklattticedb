{
  "schemaVersion": 39,
  "title": "LatticeDB API (Basic)",
  "timezone": "browser",
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request rate",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "fieldConfig": {"defaults": {"unit": "req/s"}},
      "targets": [
        {
          "expr": "sum(rate(http_requests_total[1m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Latency p50/p95",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, path))",
          "legendFormat": "p50 {{path}}"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket[1m])) by (le, path))",
          "legendFormat": "p95 {{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Error rate (5xx)",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "expr": "sum(rate(http_requests_errors_total[1m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Rate limited / Overload / Timeouts",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(http_rate_limited_total[1m])) by (path)", "legendFormat": "429 {{path}}"},
        {"expr": "sum(rate(http_requests_overload_total[1m])) by (path)", "legendFormat": "503 {{path}}"},
        {"expr": "sum(rate(http_request_timeouts_total[1m])) by (path)", "legendFormat": "504 {{path}}"}
      ]
    }
  ]
}
